<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_250sdp"
    android:background="@drawable/header_backgrnd"
    android:orientation="vertical"
    android:paddingStart="@dimen/_10sdp"
    android:paddingTop="@dimen/_16sdp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/nav_profile_image1"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/profile_image"
                        app:civ_border_color="#E7E6E3"
                        app:civ_border_width="@dimen/_3sdp" />


                    <ImageView
                        android:id="@+id/nav_verify_icon"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_100sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:src="@drawable/verified_24"
                        android:visibility="gone"
                        app:tint="@color/col17"/>



                    <TextView
                        android:id="@+id/nav_verify_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginStart="@dimen/_60sdp"
                        android:layout_marginTop="@dimen/_100sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text="@string/noveryfy"
                        android:textAlignment="center"
                        android:textColor="@color/color1"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/nav_activeLightgreen"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_80sdp"
                        android:layout_marginTop="@dimen/_70sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:src="@drawable/active_circle22"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/nav_activeLightgreenRecev"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_80sdp"
                        android:layout_marginTop="@dimen/_70sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:src="@drawable/active_circle22"
                        android:visibility="visible" />


                    <ImageView
                        android:id="@+id/nav_activeLightred"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_80sdp"
                        android:layout_marginTop="@dimen/_70sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:src="@drawable/activeredcircle"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/nav_availableTv"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/available"
            android:textColor="@color/col18"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
             android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/_50sdp"
       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bloodGroupImv"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:background="@drawable/bloodicon" />
            <TextView
                android:id="@+id/nav_bloodGroupTv"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_20sdp"
                android:textAlignment="center"
                android:text="@string/ab_plus"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:maxWidth="@dimen/_200sdp"
                android:text="@string/id"
                android:textColor="@color/Background_Light_S"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />

            <TextView                android:id="@+id/nave_memberIDno"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:maxWidth="@dimen/_250sdp"
                android:text="@string/memberid"
                android:textColor="@color/Background_Light_S"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_toRightOf="@+id/pdfrelay">


        <TableRow>

            <TextView
                style="@style/TextAppearance.Material3.BodySmall"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:maxLines="1"
                android:text="@string/name"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/nav_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingLeft="@dimen/_2sdp"
                android:text="@string/name1"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal" />

        </TableRow>

        <TableRow>

            <TextView
                style="@style/TextAppearance.Material3.BodySmall"
                android:layout_width="@dimen/_59sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:maxLines="1"
                android:text="@string/email1"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/emailnavTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingLeft="@dimen/_2sdp"
                android:text="@string/email"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal" />

        </TableRow>


        <TableRow>

            <TextView
                android:id="@+id/datelevelTv"
                style="@style/TextAppearance.Material3.BodySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:maxLines="1"
                android:text="@string/type_header"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/usertypeTv"
                style="@style/TextAppearance.Material3.BodySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:maxLines="1"
                android:text="Donor"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />
        </TableRow>


        <!--           views row       -->


    </TableLayout>


</LinearLayout>