<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_170sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_6sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@drawable/square_border"
    android:elevation="@dimen/_15sdp"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/_4sdp">

    <ImageView
        android:id="@+id/blood_group_Iv"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:background="@drawable/bloodicon" />

    <TextView
        android:id="@+id/detailBloodGroup"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:text="@string/ab_plus"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_8ssp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/availabeTv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_66sdp"
        android:layout_marginTop="@dimen/_36sdp"
        android:text="@string/available"
        android:textColor="#067D02"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/_56sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:maxWidth="@dimen/_200sdp"
            android:text="@string/id"
            android:textColor="@color/txtclr"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/memberIDno"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_2sdp"
            android:maxWidth="@dimen/_200sdp"
            android:text="@string/memberid"
            android:textColor="@color/txtclr"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_imageitem"
        android:layout_width="@dimen/_56sdp"
        android:layout_height="@dimen/_56sdp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:padding="@dimen/_3sdp"
        android:src="@drawable/profile_image"
        app:civ_border_color="#E5021450"
        app:civ_border_width="@dimen/_1sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/activeLight"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_alignEnd="@+id/profile_imageitem"
        android:layout_alignBottom="@+id/profile_imageitem"
        android:layout_marginEnd="-4dp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:src="@drawable/active_circle22"
        android:visibility="gone" />

    <ImageView
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_alignEnd="@+id/profile_imageitem"
        android:layout_alignBottom="@+id/profile_imageitem"
        android:layout_marginEnd="-4dp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:src="@drawable/active_circle22"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/activeLightred"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_alignEnd="@+id/profile_imageitem"
        android:layout_alignBottom="@+id/profile_imageitem"
        android:layout_marginEnd="-4dp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:src="@drawable/activeredcircle"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profile_imageitem"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/profile_imageitem"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detailFullName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:maxWidth="@dimen/_200sdp"
            android:text="@string/fullname"
            android:textColor="@color/txtclr"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_60sdp"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_10sdp">

        <TextView
            android:id="@+id/postedTv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:text="@string/posted"
            android:textColor="@color/col5"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/postDateTv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:paddingStart="@dimen/_5sdp"
            android:text="@string/ago"
            android:textColor="@color/col5"
            android:textSize="@dimen/_13ssp"
            android:textStyle="normal"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nextDonateLinlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_80sdp"
        android:orientation="horizontal"
        android:visibility="gone">


        <TextView
            android:id="@+id/nextTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:text="@string/nextTime"
            android:textColor="@color/col5"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/nextDateTxtv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:paddingStart="@dimen/_2sdp"
            android:text="@string/later"
            android:textColor="#220101"
            android:textSize="@dimen/_13ssp"
            android:textStyle="normal"
            android:visibility="visible" />

        <TextView
            android:id="@+id/nextdayTv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:paddingStart="@dimen/_2sdp"
            android:text="@string/later"
            android:textColor="@color/col5"
            android:textSize="@dimen/_13ssp"
            android:textStyle="normal"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/_330sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_100sdp"
        android:background="@drawable/square_border2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="@dimen/_158sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_toEndOf="@id/profile_image"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="120dp"
                        android:singleLine="true"
                        android:text="@string/total_donated"
                        android:textColor="@color/txtclr"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/total_donation_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:maxWidth="@dimen/_110sdp"
                        android:singleLine="true"
                        android:text="@string/_1_times"
                        android:textColor="@color/txtclr"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:maxWidth="@dimen/_110sdp"
                        android:singleLine="true"
                        android:text="@string/_1_times"
                        android:textColor="@color/txtclr"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/typeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="110dp"
                    android:singleLine="true"
                    android:text="@string/type"
                    android:textSize="@dimen/_13ssp"
                    android:tooltipText="Tooltip" />

                <TextView
                    android:id="@+id/detaildist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:freezesText="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxWidth="@dimen/_110sdp"
                    android:minHeight="@dimen/_48sdp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/district"
                    android:textSize="@dimen/_13ssp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/callbtn"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:src="@drawable/ic_baseline_call_24"
                        android:tooltipText="Call" />

                    <RelativeLayout
                        android:id="@+id/favourite_relay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/favouriteBtn"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginHorizontal="@dimen/_1sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:src="@drawable/favorite_24"
                            android:tooltipText="Call"
                            android:visibility="visible" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/share_btn"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:src="@drawable/share_20"
                        android:tooltipText="Call"
                        app:tint="@color/txtclr" />
                </LinearLayout>

                <TextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:maxWidth="@dimen/_130sdp"
                    android:singleLine="true"
                    android:text="@string/see"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    android:tooltipText="Tooltip" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>