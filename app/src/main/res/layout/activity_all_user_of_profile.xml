<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.AllUserOfProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/col10"
            android:elevation="@dimen/_15sdp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <ImageView
                android:id="@+id/backprofileuser"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/arrow_back2"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/userprofile"
                android:layout_width="@dimen/_190sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_39sdp"
                android:padding="@dimen/_8sdp"
                android:text="@string/userprof"
                android:textColor="@color/white"
                android:letterSpacing="0.1"
                android:fontFamily="@font/baumans"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />


        </androidx.appcompat.widget.Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


            <RelativeLayout
                android:id="@+id/profileRl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_190sdp"
                android:background="@drawable/profileback"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:maxWidth="@dimen/_200sdp"
                        android:text="@string/id"
                        android:textColor="@color/Background_Light_S"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/allprofile_memberIDno"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:maxWidth="@dimen/_200sdp"
                        android:text="@string/memberid"
                        android:textColor="@color/Background_Light_S"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginLeft="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_50sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/profile_image"
                    app:civ_border_color="#FFFCEE"
                    app:civ_border_width="@dimen/_3sdp" />

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_149sdp"
                    android:layout_marginTop="@dimen/_65sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:src="@drawable/active_circle22"
                    android:visibility="visible" />
                <ImageView
                    android:id="@+id/allusersLightgreen"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_149sdp"
                    android:layout_marginTop="@dimen/_65sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:src="@drawable/active_circle22"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/allusersLightRed"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_149sdp"
                    android:layout_marginTop="@dimen/_65sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:src="@drawable/activeredcircle"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_45sdp"
                    android:layout_marginTop="@dimen/_115sdp"
                    android:padding="@dimen/_3sdp"
                    android:text="@string/name1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/typTv"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_175sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:padding="@dimen/_3sdp"
                    android:text="@string/recvr"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_marginTop="@dimen/_32sdp"
                    android:layout_marginLeft="@dimen/_180sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="@dimen/_28sdp"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:background="@drawable/bloodicon" />
                    <TextView
                        android:id="@+id/groupTv"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="@dimen/_55sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:textAlignment="center"
                        android:text="@string/ab_plus"
                        android:textSize="@dimen/_8ssp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_68sdp"
                    android:layout_marginTop="@dimen/_145sdp"
                    android:text="@string/email"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="italic" />
            </RelativeLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profileRl">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/white_background"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_1sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_100sdp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/top_button_background"
                                android:elevation="@dimen/_8sdp"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/imageView3"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_60sdp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:background="@android:color/transparent"
                                    android:drawableTop="@drawable/ic_baseline_favorite_border_24" />

                                <TextView
                                    android:id="@+id/textView32"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_1sdp"
                                    android:text="@string/addfavo"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="@dimen/_11ssp"
                                    android:textStyle="bold" />
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/callbtn"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_100sdp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/top_button_background"
                                android:elevation="@dimen/_8sdp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_marginLeft="@dimen/_15sdp"
                                    android:layout_marginTop="@dimen/_13sdp"
                                    app:srcCompat="@drawable/call_24" />

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_22sdp"
                                    android:text="@string/call"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="@dimen/_12ssp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/active_btn"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_100sdp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/top_button_background"
                                android:elevation="@dimen/_8sdp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_marginLeft="@dimen/_19sdp"
                                   android:layout_marginTop="@dimen/_13sdp"
                                    app:srcCompat="@drawable/achievements" />

                                <TextView
                                    android:id="@+id/te4xtView3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_22sdp"
                                    android:text="@string/active"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="@dimen/_12ssp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </HorizontalScrollView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="match_parent"
                            android:text="@string/mobile"
                            android:textColor="#5917e1"
                            android:textSize="@dimen/_16ssp" />

                        <TextView
                            android:id="@+id/mobileTv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/mobile"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/col5"
                            android:textSize="@dimen/_18ssp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/appCompatImageView2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_margin="@dimen/_8sdp"
                        android:background="@color/col6" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/gender"
                            android:textColor="#5917e1"
                            android:textSize="@dimen/_16ssp" />

                        <TextView
                            android:id="@+id/genderTv"
                            android:layout_width="@dimen/_140sdp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:text="@string/gender"
                            android:textAlignment="viewStart"
                            android:textColor="@color/col5"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/_18ssp" />
                    </LinearLayout>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@color/col6" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/divisiontext"
                            android:textColor="#5917e1"
                            android:textSize="@dimen/_18ssp" />

                        <TextView
                            android:id="@+id/divisionTv"
                            android:layout_width="@dimen/_140sdp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:text="@string/division"
                            android:textAlignment="viewStart"
                            android:textColor="@color/col5"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/_18ssp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtV"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@color/col6" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/district"
                            android:textColor="#5917e1"
                            android:textSize="@dimen/_18ssp" />

                        <TextView
                            android:id="@+id/distTv"
                            android:layout_width="@dimen/_140sdp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:text="@string/district"
                            android:textAlignment="viewStart"
                            android:textColor="@color/col5"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/_18ssp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@color/col6" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_39sdp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/Upzila"
                            android:textColor="#5917e1"
                            android:textSize="@dimen/_17ssp" />

                        <TextView
                            android:id="@+id/upzilaTv"
                            android:layout_width="@dimen/_140sdp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:text="@string/Upzila"
                            android:textAlignment="viewStart"
                            android:textColor="@color/col5"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/_18ssp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@color/col6" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/Union"
                            android:textColor="#5917e1"
                            android:textSize="@dimen/_17ssp" />

                        <TextView
                            android:id="@+id/unionTv"
                            android:layout_width="@dimen/_140sdp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:text="@string/Union"
                            android:textAlignment="viewStart"
                            android:textColor="@color/col5"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/_18ssp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@color/col6" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_140sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"

                            android:text="@string/adress"
                            android:textColor="#5917e1"
                            android:textSize="@dimen/_18ssp" />

                        <TextView
                            android:id="@+id/addresTv"
                            android:layout_width="@dimen/_140sdp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:maxLines="5"
                            android:padding="@dimen/_3sdp"
                            android:scrollbarStyle="insideInset"
                            android:scrollbars="vertical"
                            android:text="@string/village"
                            android:textAlignment="center"
                            android:textColor="@color/col5"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/_18ssp" />
                    </LinearLayout>


                </LinearLayout>
            </ScrollView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_75sdp"
                android:background="@drawable/wavebottomprofile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</ScrollView>