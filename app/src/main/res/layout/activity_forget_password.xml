<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBFCFB"
    android:padding="@dimen/_6sdp"
    tools:context=".activities.ForgetPasswordActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_46sdp"
        android:layout_height="@dimen/_170sdp"
        android:layout_gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/forgot_password" />



    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Enter Signin Email here.."
        android:textColor="#01073A"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/registeremailTextField"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginVertical="@dimen/_10ssp"
            android:hint=" Email"
            android:padding="@dimen/_5sdp"
            android:textColorHint="#FFFFFF"
            app:hintTextColor="@color/white"
            app:boxStrokeColor="@color/black"
            app:endIconTint="@color/white"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/submitmailEdt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/button_background_green1"
                android:drawableStart="@drawable/email_24"
                android:inputType="textEmailAddress"
                android:textColor="@color/app_logo_background"
                android:textSize="@dimen/_14ssp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/submitnBtn"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginVertical="@dimen/_10ssp"
            android:layout_marginLeft="@dimen/_39sdp"

            android:background="@drawable/btn_shape">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="#FFE4E4"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/textView102"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="@string/please_check_your_gmail"
        android:textColor="#010D2C"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/_50sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

         />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                android:background="@android:color/transparent"
        android:textColor="#001571"
        android:drawableStart="@drawable/arrow_back2"
        android:textAllCaps="false"
        android:textSize="34sp"
        android:textStyle="bold"
      android:layout_marginRight="@dimen/_198sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />

</androidx.constraintlayout.widget.ConstraintLayout>