<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgclr"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SettingFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            app:cardElevation="@dimen/_8sdp"
            app:cardCornerRadius="@dimen/_5sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/_4sdp"
                tools:ignore="RtlSymmetry">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/abs_history_playlist"
                    android:backgroundTint="#332979FF"
                    android:padding="12dp"
                    android:src="@drawable/ic_brightness_4_black_24dp"
                    app:tint="@color/col10"
                    tools:ignore="ObsoleteLayoutParam" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_weight="1"
                        android:text="@string/app_theme"
                        android:textAlignment="viewStart"
                        android:textColor="@color/txtclr"
                        android:textSize="@dimen/_17ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:text="@string/dark_or_light_mode"
                        android:textAlignment="viewStart"
                        android:textColor="@color/txtclr" />

                </LinearLayout>

                <com.shaidulsoftstudio.roktobindu.switchButton.SwitchButton
                    android:id="@+id/switch_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            app:cardElevation="@dimen/_8sdp"
            app:cardCornerRadius="@dimen/_5sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/_4sdp"
                tools:ignore="RtlSymmetry">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/abs_history_playlist"
                    android:backgroundTint="#332979FF"
                    android:padding="12dp"
                    android:src="@drawable/language_24"
                    app:tint="@color/col10"
                    tools:ignore="ObsoleteLayoutParam" />

                <LinearLayout
                    android:id="@+id/language_linlay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_weight="1"
                        android:text="@string/langu"
                        android:textAlignment="viewStart"
                        android:textColor="@color/txtclr"
                        android:textSize="@dimen/_17ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:text="@string/applanguchange"
                        android:textAlignment="viewStart"
                        android:textColor="@color/txtclr" />

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</FrameLayout>