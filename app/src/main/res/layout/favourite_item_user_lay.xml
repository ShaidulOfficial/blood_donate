<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_165sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_6sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@drawable/square_border"
    android:elevation="@dimen/_15sdp"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/_4sdp">


    <ImageView
        android:id="@+id/deletebtn"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/delete_forever_24" />

    <ImageView
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_255sdp"
        android:layout_marginTop="@dimen/_48sdp"
         android:src="@drawable/favorite_16" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_imagefav"
        android:layout_width="@dimen/_56sdp"
        android:layout_height="@dimen/_56sdp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:padding="@dimen/_3sdp"
        android:src="@drawable/profile_image"
        app:civ_border_color="#E5021450"
        app:civ_border_width="@dimen/_1sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/activeLightgreenfav"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_alignEnd="@+id/profile_imagefav"
        android:layout_alignBottom="@+id/profile_imagefav"
        android:layout_marginEnd="-4dp"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/_10sdp"
        android:src="@drawable/active_circle22" />

    <ImageView

        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_alignEnd="@+id/profile_imagefav"
        android:layout_alignBottom="@+id/profile_imagefav"
        android:layout_marginEnd="-4dp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:src="@drawable/active_circle22"
        android:visibility="visible" />
    <ImageView
        android:id="@+id/activeLightredfav"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_alignEnd="@+id/profile_imagefav"
        android:layout_alignBottom="@+id/profile_imagefav"
        android:layout_marginEnd="-4dp"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/_10sdp"
        android:src="@drawable/activeredcircle" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profile_imagefav"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/profile_imagefav"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detailFullNamefav"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:maxWidth="@dimen/_200sdp"
            android:text="@string/fullname"
            android:textColor="#020435"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profile_imagefav"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/profile_imagefav"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:maxWidth="@dimen/_200sdp"
            android:text="@string/memberid"
            android:textColor="#020435"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/memberId_fav"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:maxWidth="@dimen/_200sdp"
            android:text="@string/memberid"
            android:textColor="#020435"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />
    </LinearLayout>


        <TextView
            android:id="@+id/availabeTvfav"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_16sdp"
            android:text="@string/available"
            android:textColor="#067F02"
            android:textSize="@dimen/_14ssp"
            android:textStyle="normal"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_57sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nextTimeTvfav"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:text="@string/nextTime"
            android:textColor="#220101"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            android:visibility="gone" />
        <TextView
            android:id="@+id/nextDateTvfav"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="@string/date"
            android:textColor="#220101"
            android:paddingStart="@dimen/_2sdp"
            android:textSize="@dimen/_13ssp"
            android:textStyle="normal"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/_330sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_85sdp"
        android:background="@drawable/square_border2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_toEndOf="@id/profile_image"
                android:orientation="vertical">


                <TextView

                    android:id="@+id/detailBloodGroupfav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="120dp"
                    android:singleLine="true"
                    android:text="@string/bloodgrp"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/typeTvfav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:maxWidth="110dp"
                    android:singleLine="true"
                    android:text="@string/type"
                    android:textSize="@dimen/_14ssp"
                    android:tooltipText="Tooltip" />

                <TextView
                    android:id="@+id/detaildistfav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                     android:freezesText="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxWidth="120dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/district"
                    android:textSize="@dimen/_14ssp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_1sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear3"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/callbtnfav"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:src="@drawable/ic_baseline_call_24"
                        android:tooltipText="Call" />

                    <ImageView
                        android:id="@+id/sharebtnfav"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:src="@drawable/share_20"
                        android:tooltipText="Share" />
                </LinearLayout>




                <TextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_19ssp"
                    android:maxWidth="@dimen/_130sdp"
                    android:singleLine="true"
                    android:text="@string/see"
                    android:textColor="@color/color2"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    android:tooltipText="Tooltip" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>