<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->


    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
             <!-- Primary brand color. -->
        <item name="colorPrimary">@color/col10</item>
        <item name="colorPrimaryDark">@color/colorDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/white</item>
         <!-- Customize your theme here. -->
        <item name="bgc">@color/white</item>
        <item name="tc">@color/black1</item>
        <item name="navi_select_clr">@color/color1</item>
        <item name="navi_view_item_clr">@color/col11</item>
        <item name="navbgc">@color/white</item>
        <item name="navbordrclr">@color/white</item>
    </style>
    <style name="DarkTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/col10</item>
        <item name="colorPrimaryDark">@color/colorDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Customize your theme here. -->
        <item name="bgc">@color/black1</item>
        <item name="tc">@color/white</item>
        <item name="navi_select_clr">@color/color1</item>
        <item name="navi_view_item_clr">@color/white</item>
        <item name="navbgc">@color/col20</item>
        <item name="navbordrclr">@color/white</item>
    </style>



    <style name="WindowAnimationTransition">
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="ThemeDialog" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle_Light</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle_Light</item>
    </style>

    <style name="ThemeDialog2" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="NegativeButtonStyle_Light" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="PositiveButtonStyle_Light" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#000000</item>
    </style>



    <style name="animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="customDialog"
        parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>
    <style name="myTextstyle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/baumans</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="paddingStart">@dimen/_5sdp</item>
        <item name="color">@color/black</item>

    </style>

    <style name="navigationTheme"
        >
        <item name="colorPrimary">@color/white</item>
        <item name="colorControlHighlight">@color/col10</item>
    </style>



</resources>